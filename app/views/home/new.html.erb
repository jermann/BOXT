<h2>Create New Storage Listing</h2>

<%= form_tag home_new_path, :class => 'form' do %>
  <%= label :storage, :name, 'Name', :class => 'col-form-label' %>
  <%= text_field :storage, :name, :class => 'form-control' %>
  
  <%= label :storage, :available_space, 'Available Space (in Sq. ft.)', :class => 'col-form-label' %>
  <%= number_field :storage, :available_space, :class => 'form-control' %>
  
  <%= label :storage, :price, 'Price per Sq. ft. (in $)', :class => 'col-form-label' %>
  <%= text_field :storage, :price, :class => 'form-control' %>

  <%= label :storage, :campus_dist, 'Distance from Campus (in Miles)', :class => 'col-form-label' %>
  <%= text_field :storage, :campus_dist, :class => 'form-control' %>

  <%= label :storage, :rating, 'Rating', :class => 'col-form-label' %>
  <%= number_field :storage, :rating, in: 1.0..5.0, step: 0.1, :class => 'form-control' %>

  <%= label :storage, :start_date, 'Availability Start Date', :class => 'col-form-label'  %>
  <%= date_field :storage, :start_date, :class => 'form-control' %>
  <br/>
  <%= label :storage, :end_date, 'Availability End Date', :class => 'col-form-label'  %>
  <%= date_field :storage, :end_date, :class => 'form-control' %>
  <br/>
  <%= submit_tag 'Save Changes', :class => 'btn btn-primary' %>
   <%= link_to 'Cancel', '/', :class => 'btn btn-secondary' %>

<% end %>
